@using ClassWork15042020_MVC_5_Model.Models
@model Prod[]

@{
    ViewBag.Title = "DemoArray";
    Layout = "~/Views/_BasicLayout.cshtml";
}

<h2>DemoArray</h2>
@if (Model.Length > 0)
{
    <table>
        <thead><tr><th>Prods</th><th>Price</th></tr></thead>
        <tbody>
            @foreach (Prod p in Model)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.Price</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>No product data</h2>
}

